<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="50dp"
        android:layout_height="41dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:text="Welcome, User3214"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="79dp" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:layout_marginTop="92dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        tools:layout_editor_absoluteX="340dp" />

    <ImageButton
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        app:srcCompat="@android:drawable/ic_menu_agenda"
        tools:layout_editor_absoluteX="338dp"
        tools:layout_editor_absoluteY="25dp" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="277dp"
        android:layout_height="51dp"
        android:layout_marginTop="68dp"
        android:text="Search your dreams"
        app:layout_constraintTop_toTopOf="@+id/welcomeText"
        tools:layout_editor_absoluteX="16dp">

    </SearchView>

    <Button
        android:id="@+id/viewAllButton"
        android:layout_width="121dp"
        android:layout_height="36dp"
        android:layout_marginTop="193dp"
        android:backgroundTint="@color/lightGrey"
        android:text="View All >"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/addButton"
        tools:layout_editor_absoluteX="274dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView" />

    <Button
        android:id="@+id/button5"
        android:layout_width="260dp"
        android:layout_height="137dp"
        android:layout_marginTop="93dp"
        android:backgroundTint="@color/lightGrey"
        android:text="Dream Journals\n See all your entries "
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/searchView"
        tools:layout_editor_absoluteX="9dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="91dp"
        android:layout_height="132dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="164dp"
        android:backgroundTint="@color/lightGrey"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/filterButton" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="389dp"
        android:layout_height="395dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/viewAllButton"
        tools:layout_editor_absoluteX="9dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
