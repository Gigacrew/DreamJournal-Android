<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="50dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Welcome, User3214"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/menuButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <ImageButton
        android:id="@+id/filterButton"
        android:layout_width="61dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/welcomeText"
        app:srcCompat="@android:drawable/ic_menu_agenda" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="277dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="@string/search_your_dreams"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText">

    </SearchView>

    <Button
        android:id="@+id/viewAllButton"
        android:layout_width="121dp"
        android:layout_height="36dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/lightGrey"
        android:text="@string/view_all"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seeAllDreamsBtn" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="36dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView" />

    <Button
        android:id="@+id/seeAllDreamsBtn"
        android:layout_width="260dp"
        android:layout_height="137dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="@color/lightGrey"
        android:text="Dream Journals\n See all your entries "
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="91dp"
        android:layout_height="132dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="@color/lightGrey"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/seeAllDreamsBtn"
        app:layout_constraintTop_toBottomOf="@+id/filterButton" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboardRecyclerView"
        android:layout_width="400dp"
        android:layout_height="307dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAllButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
